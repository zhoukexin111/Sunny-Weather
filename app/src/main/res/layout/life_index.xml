<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView app:cardCornerRadius="4dp" android:layout_margin="15dp" android:layout_height="wrap_content" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="生活指数"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"/>


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp">


            <RelativeLayout
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_coldrisk"
                    android:layout_centerVertical="true"
                    android:id="@+id/coldRiskImg"/>


                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/coldRiskImg">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:text="感冒"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary"
                        android:layout_marginTop="4dp"
                        android:id="@+id/coldRiskText"/>

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:layout_height="60dp"
                android:layout_width="0dp"
                android:layout_weight="1">

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_dressing"
                android:layout_centerVertical="true"
                android:id="@+id/dressingImg"/>


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"

                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/dressingImg">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="穿衣"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginTop="4dp"

                android:id="@+id/dressingText"/>

        </LinearLayout>

        </RelativeLayout>

        </LinearLayout>


        <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginBottom="20dp">


        <RelativeLayout android:layout_height="60dp" android:layout_width="0dp" android:layout_weight="1">

        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginStart="20dp" android:src="@drawable/ic_ultraviolet" android:layout_centerVertical="true" android:id="@+id/ultravioletImg"/>


        <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_marginStart="20dp" android:layout_toEndOf="@id/ultravioletImg" android:layout_centerInParent="true">

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="12sp" android:text="实时紫外线"/>

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary" android:layout_marginTop="4dp" android:id="@+id/ultravioletText"/>

    </LinearLayout>

    </RelativeLayout>


        <RelativeLayout android:layout_height="60dp" android:layout_width="0dp" android:layout_weight="1">

        <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginStart="20dp" android:src="@drawable/ic_carwashing" android:layout_centerVertical="true" android:id="@+id/carWashingImg"/>


        <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="vertical" android:layout_marginStart="20dp" android:layout_toEndOf="@id/carWashingImg" android:layout_centerInParent="true">

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="12sp" android:text="洗车"/>

        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="16sp" android:textColor="?android:attr/textColorPrimary" android:layout_marginTop="4dp" android:id="@+id/carWashingText"/>

    </LinearLayout>

    </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>